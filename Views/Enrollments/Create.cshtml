@model SMS.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                @Html.DropDownList("CourseId", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser" class="control-label"></label>
                @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="ApplicationUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnrollmentName" class="control-label"></label>
                <input asp-for="EnrollmentName" class="form-control" />
                <span asp-validation-for="EnrollmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
