@{
    ViewData["Title"] = "Your Results";
}
<div class="container">
    <div class="row">
        @foreach (var result in ViewBag.results)
        {
            <div class="col-md-4 my-2">
                <div class="card">
                    <div class="card-header">
                        <h1>@result.CourseName</h1>
                    </div>
                    <div class="card-body d-flex justify-content-center">
                        <h3>@result.Grade</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
