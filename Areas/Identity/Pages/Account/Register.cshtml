@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Register User</h2>
    <hr />
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 my-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                        <label asp-for="Input.FirstName"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 my-2">
                    <div class="form-floating">
                        <input asp-for="Input.MiddleName" class="form-control" autocomplete="middlename" aria-required="false" />
                        <label asp-for="Input.MiddleName"></label>
                        <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 my-2">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                        <label asp-for="Input.LastName"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 my-2">
                    <div class="form-floating">
                        <input asp-for="Input.MobileNumber" class="form-control" autocomplete="on" aria-required="false" />
                        <label asp-for="Input.MobileNumber"></label>
                        <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 my-2">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 my-2">
                    .<div class="form-floating">
                        <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" type="text" style="word-break:break-word;" />
                        <label asp-for="Input.Address"></label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 my-2">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 my-2">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary my-3">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
